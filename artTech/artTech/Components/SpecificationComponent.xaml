<UserControl x:Class="artTech.Components.SpecificationComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:artTech.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border
         Width="150"
         Margin="0 0 10 10"
         Padding="5"
         BorderBrush="LightGray"
         BorderThickness="2"
         CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock 
                 Grid.Row="0"
                 FontSize="18"
                 TextWrapping="Wrap"
                 Style="{DynamicResource TextBlock_StyleFonts_BlackMedium}"
                 Text="{Binding Name}"/>
                <TextBlock 
                 Grid.Row="1"
                 FontSize="18"
                 TextWrapping="Wrap"
                 Style="{DynamicResource TextBlock_StyleFonts_BlackRegular}"
                 Text="{Binding Value}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
